<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.golie.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_fragment" />

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.golie.ui.category.categoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/category_fragment" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.golie.ui.shop.ShopFragment"
        android:label="@string/title_shop"
        tools:layout="@layout/shop_fragment" />
    <fragment
        android:id="@+id/navigation_addGoal"
        android:name="com.example.golie.ui.category.goal.AddGoalFragment"
        android:label="add_goal_fragment"
        tools:layout="@layout/add_goal_fragment" />
    <fragment
        android:id="@+id/navigation_createReward"
        android:name="com.example.golie.ui.shop.reward.CreateReward"
        android:label="create_reward_fragment"
        tools:layout="@layout/create_reward_fragment" />
</navigation>